{
  "compilerOptions": {
    "outDir": "dist/out-ngc",
    "baseUrl": "src",
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es2015", "dom"],
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "typeRoots": [
      "node_modules/@types"
    ]
  },

  "exclude": [
    "src/main.ts"
  ],

  "angularCompilerOptions": {
    "genDir": "dist/aot",
    "skipMetadataEmit" : true
  }
}
